{
    "name": "@ethossoftworks/bloc",
    "version": "1.0.0",
    "author": {
        "name": "Ryan Mitchener"
    },
    "license": "MIT",
    "description": "A simple, modular state management library",
    "keywords": [
        "state management",
        "streams"
    ],
    "repository": {
        "url": ""
    },
    "main": "Bloc.core.js",
    "types": "types/index.d.ts",
    "files": [
        "types/",
        "*.js",
        "!*.js.map",
        "!*.test.d.ts"
    ],
    "dependencies": {
        "@ethossoftworks/job": "^1.0.1",
        "@ethossoftworks/outcome": "^2.1.0",
        "lodash.isequal": "^4.5.0",
        "rxjs": "^6.6.3"
    },
    "devDependencies": {
        "@types/lodash.isequal": "^4.5.5",
        "@ethossoftworks/knock-on-wood": "^2.0.0",
        "@types/react": "^16.8.24",
        "react": "^17.0.1",
        "copy-webpack-plugin": "^7.0.0",
        "prettier": "^2.1.2",
        "typescript": "^4.1.2",
        "webpack": "^5.16.0",
        "webpack-cli": "^4.2.0",
        "source-map-loader": "^2.0.0"
    },
    "scripts": {
        "format": "npx prettier --write --loglevel warn src/**/*.ts*",
        "ts-compile": "npx tsc -b src/",
        "build": "yarn format && yarn ts-compile && npx webpack --env prod",
        "build-dev": "yarn format && yarn ts-compile && npx webpack --env dev",
        "build-test": "yarn format && npx tsc -b src/tsconfig.test.json && npx webpack --env test",
        "build-pack": "yarn build && cd ./build/dist && npm pack",
        "build-publish": "yarn build && cd ./build/dist && npm publish --access public",
        "start-bundler": "npx webpack --watch",
        "start-ts": "npx tsc -b src/ -w",
        "bundle-inspect": "yarn build && npx source-map-explorer build/dist/Bloc.js",
        "test": "yarn build-test && node build/dist/Bloc.test.js",
        "test-inspect": "yarn build-test && node --inspect-brk build/dist/Bloc.test.js"
    },
    "prettier": {
        "endOfLine": "lf",
        "tabWidth": 4,
        "semi": false,
        "printWidth": 120,
        "useTabs": false
    }
}