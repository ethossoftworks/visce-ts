{
    "name": "@ethossoftworks/bloc-react",
    "version": "1.0.0",
    "author": {
        "name": "Ryan Mitchener"
    },
    "license": "MIT",
    "description": "React hooks for @ethossoftworks/bloc",
    "keywords": [
        "state management",
        "React",
        "Hooks"
    ],
    "repository": {
        "url": "https://github.com/ethossoftworks/bloc-ts/tree/master/packages/bloc-react"
    },
    "main": "BlocReact.cjs.js",
    "module": "BlocReact.esm.js",
    "types": "types/index.d.ts",
    "files": [
        "types/",
        "*.js",
        "!*.js.map",
        "!*.test.d.ts"
    ],
    "sideEffects": false,
    "dependencies": {
        "lodash.isequal": "^4.5.0",
        "react": "^17.0.1"
    },
    "peerDependencies": {
        "@ethossoftworks/bloc": ".\\ethossoftworks-bloc-1.0.0.tgz"
    },
    "devDependencies": {
        "@ethossoftworks/bloc": ".\\ethossoftworks-bloc-1.0.0.tgz",
        "@ethossoftworks/job": "^1.0.2",
        "@ethossoftworks/knock-on-wood": "^2.0.0",
        "@ethossoftworks/outcome": "^2.1.0",
        "@rollup/plugin-commonjs": "^17.0.0",
        "@rollup/plugin-node-resolve": "^11.1.0",
        "@types/lodash.isequal": "^4.5.5",
        "@types/react": "^16.8.24",
        "prettier": "^2.1.2",
        "rollup": "^2.38.1",
        "rollup-plugin-sourcemaps": "^0.6.3",
        "rollup-plugin-terser": "^7.0.2",
        "rxjs": "^6.6.3",
        "source-map-explorer": "^2.5.2",
        "typescript": "^4.1.2"
    },
    "scripts": {
        "format": "npx prettier --write --loglevel warn src/**/*.ts*",
        "ts-compile": "npx tsc -b src/tsconfig.json",
        "ts-compile-test": "npx tsc -b src/tsconfig.test.json",
        "build": "yarn format && yarn ts-compile && npx rollup -c rollup.config.js --environment prod",
        "build-test": "yarn format && yarn ts-compile-test && npx rollup -c rollup.config.js --environment test",
        "build-pack": "yarn build && cd ./build/dist && npm pack",
        "build-publish": "yarn build && cd ./build/dist && npm publish --access public",
        "start-bundler": "npx rollup -c rollup.config.js --environment prod --watch",
        "start-ts": "npx tsc -b src/tsconfig.json -w",
        "bundle-inspect": "yarn build && npx source-map-explorer build/dist/BlocReact.esm.js --no-border-checks --only-mapped",
        "test": "yarn build-test && node build/dist/BlocReact.test.js",
        "test-inspect": "yarn build-test && node --inspect-brk build/dist/BlocReact.test.js"
    },
    "prettier": {
        "endOfLine": "lf",
        "tabWidth": 4,
        "semi": false,
        "printWidth": 120,
        "useTabs": false
    }
}